                        android:orientation="horizontal">

                        <com.tincio.pharmaapp.presentation.customview.EditTextLightGeneral
                            style="@style/AppTheme.EditTextGeneralStyle.Disponibilidad"
                            android:id="@+id/txt_horainicio_martes"
