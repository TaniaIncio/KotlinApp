                            android:layout_width="wrap_content"
                            android:id="@+id/txt_horafin_martes"
                            android:layout_weight="2"
                            android:hint="@string/placeholder_hora_fin"
                             />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

